<div class="col-md-6 ">
    <%= form_with(model: appoinment, local: true) do |form| %>
    <% if appoinment.errors.any? %>
    <div id="error_explanation">
        <h2><%= pluralize(appoinment.errors.count, "error") %> prohibited this appoinment from being saved:</h2>

        <ul>
            <% appoinment.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
    <% end %>

    <div class="field">
        <%= form.label :start_time %>
        <%= form.text_field :start_time , class: "form-control example" , id: "example"%>
    </div>

    <div class="field">
        <%= form.label :end_time %>
        <%= form.text_field :end_time , class: "form-control example"%>
    </div>

    <div class="field">
        <%= form.label :doctor_id %>
        <%= form.select :doctor_id, options_for_select(get_doctor, "Select Doctor"),{}, {class: "form-control"}  %>
    </div>

    <div class="actions">
        <%= form.submit "Save", class: 'btn btn-success' %>
    </div>
    <% end %>

</div>
